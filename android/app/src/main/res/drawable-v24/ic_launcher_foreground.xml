<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- O ícone de primeiro plano deve ocupar a área central (72x72 dp) -->
    <group
        android:translateX="18"
        android:translateY="18">
        
        <!-- Fundo do ícone (quadrado arredondado) - Opcional, mas o logo tem um contorno -->
        <!-- Vamos focar apenas no gráfico de barras e seta, deixando o fundo para o background.xml -->
        
        <!-- Gráfico de Barras e Seta (Roxo) -->
        <path
            android:fillColor="#8A2BE2"
            android:pathData="M 20 70 L 20 40 L 30 40 L 30 70 Z" />
        <path
            android:fillColor="#8A2BE2"
            android:pathData="M 40 70 L 40 30 L 50 30 L 50 70 Z" />
        <path
            android:fillColor="#8A2BE2"
            android:pathData="M 60 70 L 60 20 L 70 20 L 70 70 Z" />
        
        <!-- Linha de tendência e seta (simplificada) -->
        <path
            android:strokeColor="#8A2BE2"
            android:strokeWidth="4"
            android:strokeLineCap="round"
            android:pathData="M 15 65 C 35 45, 55 25, 75 15" />
        
        <!-- Seta (triângulo) -->
        <path
            android:fillColor="#8A2BE2"
            android:pathData="M 75 15 L 70 20 L 75 25 Z" />
            
    </group>
</vector>